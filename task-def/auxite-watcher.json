{
  "family": "auxite-watcher",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::809278147371:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::809278147371:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "auxite-watcher",
      "image": "809278147371.dkr.ecr.eu-central-1.amazonaws.com/auxite-watcher:latest",
      "essential": true,
      "linuxParameters": { "initProcessEnabled": true },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "eu-central-1",
          "awslogs-group": "/ecs/auxite-watcher",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        { "name": "WS_URL", "value": "wss://base-sepolia.infura.io/ws/v3/b281db2537f943bd8b228734bf5f3115" },
        { "name": "CHAIN", "value": "base-sepolia" },
        { "name": "WEBHOOK_URL", "value": "https://wallet.auxite.io/api/oracle-hook" },
        { "name": "WEBHOOK_SECRET", "value": "auxite-shared-secret" },
        { "name": "ORACLES", "value": "0x4544287732ef700b724f72539368561dcec3ccda" },
        { "name": "ROLLUP_WINDOW_SEC", "value": "0" }
      ]
    }
  ]
}
